<div class="container mt-4">
  <h2 class="text-center mb-4">Recibo de Compra</h2>

  <p class="fs-5">Gracias por tu compra, <strong>{{user.name}}</strong>!</p> <!-- Nombre del usuario -->

  <ul class="list-group mb-3">
    {{#each items}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span>{{name}}</span>
      <span>{{quantity}} x ${{price}}</span> <!-- Nombre y cantidad de productos -->
    </li>
    {{/each}}
  </ul>

  <p class="text-end fw-bold fs-5">Total gastado: ${{totalAmount}}</p> <!-- Total de la compra -->

  <p class="text-muted">ID del usuario: {{user.id}}</p> <!-- ID del usuario -->
</div>