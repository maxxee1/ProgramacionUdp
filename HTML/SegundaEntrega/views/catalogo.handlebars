<div class="container">
  <div class="row">
    {{#each products}}
      <div class="col-12 col-md-4 d-flex align-items-stretch mb-3">
        <div class="card" style="width: 18rem;">
          <img src="{{this.image_path}}" class="card-img-top" alt="{{this.name}}">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text"><strong>Precio: ${{this.price}}</strong></p>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addToCartModal{{this.id}}">
              Añadir al carrito
            </button>
          </div>
        </div>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="addToCartModal{{this.id}}" tabindex="-1" aria-labelledby="addToCartModalLabel{{this.id}}" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addToCartModalLabel{{this.id}}">Añadir "{{this.name}}" al carrito</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/cart/add" method="POST">
              <div class="modal-body">
                <input type="hidden" name="product_id" value="{{this.id}}">
                <div class="mb-3">
                  <label for="quantity{{this.id}}" class="form-label">Cantidad:</label>
                  <input type="number" class="form-control" id="quantity{{this.id}}" name="quantity" value="1" min="1" max="{{this.stock}}">
                </div>
                <p>Stock disponible: {{this.stock}}</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary">Añadir al carrito</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
